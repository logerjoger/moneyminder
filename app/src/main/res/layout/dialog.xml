<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="dialogVM"
            type="de.logerbyte.moneyminder.screens.cashsummary.editdialog.DialogViewModel" />

        <variable
            name="cashVM"
            type="de.logerbyte.moneyminder.viewModels.CashViewModel" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/frame_cash"
            bind:viewModel="@{cashVM}" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:context=".screens.cashsummary.summaryList.CashSummaryActivity">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{dialogVM::onClickCancel}"
                android:text="@string/cancel" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{dialogVM::onClickOk}"
                android:text="@string/ok" />

        </LinearLayout>

    </LinearLayout>
</layout>